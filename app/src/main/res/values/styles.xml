<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextViews -->
    <style name="styTV" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/jaldi_regular</item>
        <item name="android:textColor">@color/negro</item>
    </style>
    <style name="styTV.titulo">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/jomhuria_regular</item>
        <item name="android:textColor">@color/gris</item>
    </style>
    <style name="styTV.tituloApp">
        <item name="android:textSize">32sp</item>
        <item name="fontFamily">@font/angkor_regular</item>
        <item name="android:textColor">@color/amarillo</item>
    </style>
    <style name="styTV.texto">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/jomhuria_regular</item>
        <item name="android:textColor">@color/gris</item>
    </style>
    <!-- EditTexts -->
    <style name="styET" parent="TextAppearance.AppCompat.Display1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>