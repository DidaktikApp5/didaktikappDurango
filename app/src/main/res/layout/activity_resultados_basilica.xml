<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_resultados_basilica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".actividades.ResultadosBasilicaActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="16dp"
        android:textColor="#000"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:id="@+id/acertadas"
        android:text=""/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/acertadas"
        android:id="@+id/btnFinal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/btnFinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="26sp"
        android:padding="16dp"
        android:textColor="#000"
        android:layout_margin="16dp"
        android:id="@+id/puntajeFinal"
        android:text=""/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_Mascota"
            android:layout_width="300sp"
            android:layout_height="300sp"
            android:contentDescription="@string/content_description_mascota_de_la_aplicacion"
            android:src="@drawable/frame0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>